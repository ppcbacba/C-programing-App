<Window x:Class="ch07.Examples.DialogBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch07.Examples"
        mc:Ignorable="d"
        Title="DialogBoxWindow" Height="139.5" Width="317" WindowStartupLocation="CenterScreen">
    <Grid Height="121" VerticalAlignment="Top">
        <StackPanel>
            <TextBox x:Name="textBox1" Height="23" TextWrapping="Wrap" Margin="10,10,20,10" Width="200" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="buttonOK" Content="确定" Width="60" Margin="10" Click="buttonOK_Click"/>
                <Button x:Name="buttonCancel" Content="取消" Click="buttonCancel_Click" Width="60" Margin="10"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
